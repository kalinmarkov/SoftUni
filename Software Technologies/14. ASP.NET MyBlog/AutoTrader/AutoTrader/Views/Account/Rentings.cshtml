@model IEnumerable<AutoTrader.Models.Renting.UserRentingModel>

<h2 class="text-center">My Rentings</h2>

<table class="table table-bordered table-responsive table-striped table-hover">
    <tr>
        <td>
            Date
        </td>
        <td>
            Days
        </td>
        <td>
            Car
        </td>
        <td>
            Price
        </td>
    </tr>
    @foreach (var renting in Model)
    {
        <tr>
            <td>
                @renting.RentedOn.ToString("dd/MM/yyyy")
            </td>
            <td>
                @renting.Days
            </td>
            <td>
                @renting.CarName
                <img class="pull-right" src="@renting.CarImgUrl" style="width: 100px"/>
            </td>
            <td>
                @renting.TotalPrice
            </td>
        </tr>
    }
</table>
